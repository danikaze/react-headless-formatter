{
  "name": "react-headless-formatter",
  "version": "1.0.0",
  "description": "Render HTML-like markup language from strings using React components",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && npm run build:types && npm run build:es && npm run build:cjs",
    "build:types": "tsc --project tsconfig.build.json && rimraf helpers",
    "build:es": "cross-env BABEL_ENV=jsnext babel src --extensions .ts,.tsx --out-dir dist/es",
    "build:cjs": "babel src --extensions .ts,.tsx --out-dir dist/commonjs",
    "dev": "tsc --w --sourceMap",
    "clean": "rimraf dist && mkdirp dist",
    "test": "npm run test-only && npm run lint && npm run typecheck",
    "lint": "eslint --ext .ts --ext .tsx src/",
    "prettier": "prettier --write 'src/**/*.{ts,tsx}'",
    "test-only": "cross-env NODE_ENV=test jest",
    "test-dev": "cross-env NODE_ENV=test node --inspect node_modules/jest/bin/jest.js --watch --runInBand",
    "typecheck": "tsc --noEmit -p ./tsconfig.json",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danikaze/react-headless-formatter.git"
  },
  "keywords": [
    "typescript",
    "npm",
    "lib",
    "boilerplate",
    "library",
    "react",
    "html",
    "parser",
    "tokenizer",
    "render",
    "component",
    "headless",
    "ui"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./index.d.ts",
      "module": "./dist/es/index.js",
      "import": "./dist/es/index.js",
      "require": "./dist/commonjs/index.js",
      "default": "./dist/es/index.js"
    }
  },
  "author": "danikaze <danikaze@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/danikaze/react-headless-formatter/issues"
  },
  "homepage": "https://github.com/danikaze/react-headless-formatter#readme",
  "peerDependencies": {
    "react": ">=16",
    "react-dom": ">=16"
  },
  "devDependencies": {
    "@alex_neo/jest-expect-message": "^1.0.5",
    "@babel/cli": "^7.22.9",
    "@babel/core": "^7.22.5",
    "@babel/eslint-parser": "^7.22.9",
    "@babel/plugin-proposal-async-generator-functions": "^7.20.7",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/plugin-transform-modules-commonjs": "^7.22.5",
    "@babel/plugin-transform-runtime": "^7.22.9",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@babel/register": "^7.22.5",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.2",
    "@types/jest-expect-message": "^1.1.0",
    "@types/react": "^18.2.13",
    "@types/react-dom": "^18.2.6",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "babel-jest": "^29.6.2",
    "babel-plugin-macros": "^3.1.0",
    "babel-plugin-tester": "^11.0.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "mkdirp": "^3.0.1",
    "nyc": "^15.1.0",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4"
  }
}
