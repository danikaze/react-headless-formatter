{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": ".",
    "target": "es5",
    "jsx": "react",
    "module": "ESNext",
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": false
  },
  "include": ["src/index.ts"],
  "exclude": ["src/helpers/**/*", "tests/**/*"]
}
